{
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": "./",
      "downlevelIteration": true,
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "declaration": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "noEmit": false,
      "experimentalDecorators": true,
      "target": "ES2019",
      "noUnusedLocals": true,
      "strict": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "lib": [
        "es2019",
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ]
  },
  "exclude": [
      "node_modules",
      "*/node_modules/*",
      "dist/**/*"
  ]
}
